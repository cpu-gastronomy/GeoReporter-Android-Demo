        <!--  My Reports Activity -->
        <activity android:name=".MyReportsActivity" android:label="@string/menu_myreports"/>
        
        <!--  Report To Activity -->
        <activity android:name=".ReportToActivity" android:label="@string/menu_reportto"/>
        
        <!--  Settings Activity -->
        <activity android:name=".SettingsActivity" android:label="@string/menu_settings"/>
        
        <activity android:name=".AboutActivity" android:label="About"/>
        
